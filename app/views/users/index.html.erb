<p id="notice"><%= notice %></p>

<h1>Lista uzytkownikow</h1>

<table>
  <thead>
    <tr>
      <th>Imie</th>
      <th>Email</th>
      <th>Aktywny</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.active %></td>
        <td><%= link_to 'Edycja', edit_user_path(user), class: "button radius" %></td>
        <td><%= link_to 'Usun', products_path, class: "button radius", method: :delete, data: { confirm: 'Czy jestes pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy uzytkownik', new_user_path, class: "button radius" %>

