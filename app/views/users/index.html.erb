<%= header "Lista uzytkownikow" %>


<table>
  <thead>
    <tr>
      <th class="avatar">avatar</th>
      <th>Imie</th>
      <th>Email</th>
      <th>Aktywny</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.avatar.url(:thumb) unless user.avatar.blank? %>
        </td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.active %></td>
        <td><%= link_to 'Edycja', edit_user_path(user), class: "button radius" %></td>
        <td><%= link_to 'Usun', user_path(user), class: "button radius", method: :delete, data: { confirm: 'Czy jestes pewien?' } %></td>
        <td><%= link_to 'Zadania', edit_tasks_path(user), class: "button radius" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_new 'Nowy uzytkownik', new_user_path %>

